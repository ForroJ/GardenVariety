@page  
@model GardenVariety.Pages.Harvests.CreateModel  
<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GardenVariety.styles.css" asp-append-version="true" />
</head>
@{  
  ViewData["Title"] = "Create";  
}  

<h1>Create</h1>  

<h4>Harvester</h4>  
<hr />  
<div class="row">  
  <div class="col-md-4">  
      <form method="post">  
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Harvester.Date" class="control-label"></label>
                <input asp-for="Harvester.Date" type="date" class="form-control" />
                <span asp-validation-for="Harvester.Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Harvester.GardenId" class="control-label"></label>
                <select asp-for="Harvester.GardenId" class="form-control" asp-items="Model.Garden"></select>
                <span asp-validation-for="Harvester.GardenId" class="text-danger"></span>
            </div>


          <div class="form-group">  
              <input type="submit" value="Create" class="btn btn-primary btn btn-create" />  
          </div>  
      </form>  
</div>  
</div>
<div>  
  <a asp-page="Index">Back to List</a>  
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
